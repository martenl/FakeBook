<h1>Nachrichten von <%=@user.get_name%></h1>

<div id="messages-box">
  Sie haben <%= @messages.length%> Nachrichten	
  <% if @messages.length != 0%>
  	<div id="messages-list">
  	<%@messages.reverse.each do | msg|%>
  		<div class="message-elem">
  			<b><%= link_to msg.title,{:controller=>:message,:action=>:read,:id=>msg.id}%></b>      Vom  <%=msg.created_at%>
  			<br />
  			Von: <%= link_to msg.sender.get_name,show_user_path(:id => msg.sender.id)%><br />  	  		
  		</div>
  	<%end%>
  	</div>
  <%end%>
</div>

<% content_for :title do%>
Nachrichten von <%=@user.get_name%>
<%end%>
